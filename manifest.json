{
  "manifest_version": 2,

  "name": "Tor Checker",
  "description": "Check if browser requests are going throught the tor network",
  "version": "1.0",

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "browser_action": {
    "default_icon": "icons/not_connected.png"
  },

  "permissions": [
    "proxy",
    "https://check.torproject.org/"
  ],

  "background": {
    "scripts": ["torcheck.js"]
  }
}
